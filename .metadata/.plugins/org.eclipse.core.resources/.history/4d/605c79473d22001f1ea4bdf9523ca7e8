package in.mindcraft.service;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Service;

import in.mindcraft.pojo.Cart;
import in.mindcraft.pojo.Customer;
import in.mindcraft.pojo.Product;

@Service
public class CustomerService 
{
	private final JdbcTemplate jdbcTemplate;
	
	public CustomerService(JdbcTemplate jdbcTemplate)
	{
		this.jdbcTemplate = jdbcTemplate;
	}
	
	public Map<String, Object> addToCart(Cart cart)
	{
		String cartSql = "Insert into Cart (cart_id) values (?)";
        int cartId = jdbcTemplate.queryForObject("Select nextval('cart_seq')", int.class);
        int cartResult = jdbcTemplate.update(cartSql, cartId);

        for (Product product : cart.getCart()) 
        {
            String productSql = "Insert into Cart_Product (c_id, p_id) VALUES (?, ?)";
            jdbcTemplate.update(productSql, cartId, product.getPro_id());
        }

        Map<String, Object> response = new HashMap<>();
        if (cartResult > 0) 
        {
            response.put("status", "success");
            response.put("message", "Cart and Products Inserted Successfully!");
        } else {
            response.put("status", "error");
            response.put("message", "Failed to Insert Cart and Products!");
        }
        return response;
	}
	
	public List<Map<String, Object>> getFromCart(int cartId)
	{
		String sql = "Select p.* from Product p INNER JOIN Cart_Product cp ON p.pro_id = cp.p_id WHERE cp.c_id = ?";
        return jdbcTemplate.queryForList(sql, cartId);
	}

	public double displayBill(Cart cart) 
	{
        double bill = 0;
        for (Product p : cart.getCart()) 
        {
            bill += p.getPro_quantity() * (p.getPro_cost() - p.getPro_discount());
        }
        return bill;
    }

	public List<Product> payBill(Cart cart) throws SQLException 
	{
        double bill = displayBill(cart);
        List<Product> ordered = new ArrayList<>();

        for (Product p : cart.getCart()) 
        {
            String sql = "Select * from Product where pro_id = ?";
            Product product = jdbcTemplate.queryForObject(sql, new Object[]{p.getPro_id()}, (rs, rowNum) -> 
            {
                return new Product(rs.getInt("pro_id"), rs.getString("pro_name"), rs.getInt("pro_cost"), rs.getInt("pro_quantity"), rs.getInt("pro_discount"));
            });

            if (product != null && product.getPro_quantity() >= p.getPro_quantity()) 
            {
                ordered.add(p);
                product.setPro_quantity(product.getPro_quantity() - p.getPro_quantity());
                jdbcTemplate.update("Update Product set pro_quantity = ? where pro_id = ?", product.getPro_quantity(), product.getPro_id());
            }
        }

        String customerSql = "Select * from Customer where name = ?";
        Customer customer = jdbcTemplate.queryForObject(customerSql, new Object[]{customer.getC_name()}, (rs, rowNum) -> 
        {
            return new Customer(rs.getInt("c_id"), rs.getString("c_name"), rs.getInt("balance"));
        });

        if (customer.getWallet() < bill) 
        {
            return null;
        }

        jdbcTemplate.update("Update Customer set wallet = wallet - ? where name = ?", bill, cart.getUsername());
        jdbcTemplate.update("Delete from Cart where username = ?", cart.getUsername());

        return ordered;
    }

    public void addBalance(String username, double amount)
    {
        jdbcTemplate.update("Update Customer set balance = balance + ? where name = ?", amount, username);
    }

    public double displayBalance(String username) 
    {
        String sql = "Select balance from Customer where name = ?";
        return jdbcTemplate.queryForObject(sql, new Object[]{username}, Double.class);
    }

}
