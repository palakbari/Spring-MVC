<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
    <title>Your Application</title>
    <script>
        // Function to redirect to main page after a period of inactivity
        function redirectOnInactive() {
            // Define the timeout duration (in milliseconds), e.g., 10 minutes
            const timeoutDuration = 600000; // 10 minutes
            let lastActivityTime = Date.now();

            // Listen for user activity events
            document.addEventListener('mousemove', resetTimer);
            document.addEventListener('keypress', resetTimer);

            function resetTimer() {
                lastActivityTime = Date.now();
            }

            // Check for inactivity periodically
            setInterval(checkInactive, 1000); // Check every second

            function checkInactive() {
                const currentTime = Date.now();
                const timeSinceLastActivity = currentTime - lastActivityTime;
                
                // Redirect to main page if inactive for longer than the timeout duration
                if (timeSinceLastActivity >= timeoutDuration) {
                    window.location.href = '/mainPage'; // Replace '/mainPage' with your main page URL
                }
            }
        }

        // Call the redirectOnInactive function when the page loads
        window.onload = function() {
            redirectOnInactive();
        };
    </script>
</head>
